<div style="background-color: #222">
    <%= image_tag 'top.jpg', style:"width: 100vw; height: auto;" %>
</div>

<div class="container">
    <div class="row">
    </div>

    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <a href="/events/1/now" class="alert alert-danger text-center" style="display: block;margin: 20px;">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            予約したハッカソンが開催中!
        </a>
        <h2 class="page-header">Event 一覧</h2>

        <div class="event-list">
            <% @events.each do |e| %>
                <div>
                    <h3><%= e.name %>
                        <small>&nbsp;by&nbsp;<%= e.company.name %></small>
                    </h3>
                    <h5>期間：<%= e.start_date.strftime("%m/%d %H:%M") %> ~ <%= e.end_date.strftime("%m/%d %H:%M") %></h5>

                    <p><%= e.description %></p>

                    <%= link_to "詳細を見る", event_path(e.id) %>
                    <hr>

                </div>
            <% end %>
        </div>
    </div>
    <div class="col-xs-2"></div>
</div>